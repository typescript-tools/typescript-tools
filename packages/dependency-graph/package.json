{
  "name": "@typescript-tools/dependency-graph",
  "version": "2.1.5",
  "description": "Generate dependency graph of internal packages",
  "main": "dist/src/dependency-graph.js",
  "types": "dist/src/dependency-graph.d.ts",
  "scripts": {
    "prepublishOnly": "npm run clean && npm run compile",
    "build": "tsc -b .",
    "clean": "rimraf --no-glob dist",
    "lint-staged": "lint-staged",
    "ava": "echo 'No tests defined'",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix . package.json",
    "test": "echo 'No tests defined'",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prettier": "prettier --list-different .",
    "prettier:fix": "prettier --write ."
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pre-commit": "lint-staged",
  "repository": {
    "type": "git",
    "url": "https://github.com/typescript-tools/typescript-tools.git"
  },
  "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/EricCrosson)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/typescript-tools/typescript-tools/issues"
  },
  "homepage": "https://github.com/typescript-tools/typescript-tools",
  "dependencies": {
    "@typescript-tools/io-ts": "^2.2.0",
    "@typescript-tools/lerna-packages": "^2.2.2",
    "@typescript-tools/lerna-utils": "^2.1.1",
    "fp-ts": "^2.9.3",
    "io-ts": "~2.1.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "ava": "^3.13.0",
    "ava-fast-check": "^3.0.0",
    "codecov": "^3.8.1",
    "eslint": "^7.12.1",
    "fast-check": "^2.6.0",
    "lint-staged": "^10.5.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist/src/"
  ],
  "ava": {
    "files": [
      "!dist/**/*.d.ts",
      "test/**/test-*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "keywords": [
    "dependency",
    "graph",
    "lerna",
    "packages"
  ],
  "publishConfig": {
    "access": "public"
  }
}
